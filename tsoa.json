{
  "entryFile": "src/app.ts",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "schemes": ["http"],
    "securityDefinitions": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    }
  },
  "routes": {
    "routesDir": "src"
  }
}
